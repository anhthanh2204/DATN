@model List<ShopShoe.Models.SanPham>

@{
    ViewBag.Title = "Sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sản phẩm</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="@Url.Action("Them","SanPham")" class="btn btn-default">Thêm mới</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá sản phẩm</th>
                            <th>Ảnh</th>
                            <th>Số lượng</th>
                            <th>Hành động</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                                <td>@item.ID</td>
                                <td>@item.TenSanPham</td>

                                <td>@String.Format("{0:0,0 đ}", item.GiaSanPham)</td>
                                <td>
                                    <img src="~/anh/xe/@item.Anh" style="height:50px" />
                                </td>
                                <td>@item.SoLuong</td>
                                <td class="center">
                                    <a href="@Url.Action("Sua","SanPham",new {ID=item.ID})">Sửa</a> |
                                    @Ajax.ActionLink("Xóa", "Xoa", new { @ID = item.ID }, new AjaxOptions
                               {
                                   Confirm = "Bạn đã chắc chắn xóa?",
                                   OnComplete = "$('" + @item.ID + "').remove()",
                                   HttpMethod = "Delete",
                                   OnSuccess = "window.location.reload()"
                               })
                                </td>

                            </tr>
                        }



                    </tbody>
                </table>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>

</div>