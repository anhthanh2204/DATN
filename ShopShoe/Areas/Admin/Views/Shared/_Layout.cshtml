                        </li>
                        <li>
                            <a href="@Url.Action("Index","LoaiTin")"><i class="fa fa-archive"></i>  Loại tin</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","TinTuc")"><i class="fa fa-asterisk"></i>  Tin tức</a>
                        </li>
                        
                        <li>
                            <a href="@Url.Action("Index","Banner")"><i class="fa fa-adjust"></i>  Banner </a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <div id="page-wrapper">

            @RenderBody()
            <!-- /.col-lg-12 -->
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="~/dist/admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/dist/admin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/dist/admin/vendor/metisMenu/metisMenu.min.js"></script>
    <!-- DataTables JavaScript -->
    <script src="~/dist/admin/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/dist/admin/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="~/dist/admin/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/dist/admin/dist/js/sb-admin-2.js"></script>
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
    @RenderSection("scripts", false)
</body>
</html>
