@model List<ShopShoe.Models.DonHang>

@{
    ViewBag.Title = "DonHang";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Đơn hàng</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên KH</th>
                            <th>SDT</th>
                            <th>Email</th>
                            <th>Địa Chỉ</th>
                            <th>Ngày Đặt</th>
                            <th>Trạng Thái</th>
                            <th>Chi Tiết</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                                <td>@item.ID</td>
                                <td>@item.Ten_KH</td>
                                <td>@item.SDT</td>
                                <td>@item.Email</td>
                                <td>@item.DiaChiKH</td>
                                <td>@item.NgayDat</td>
                                <td>
                                    @if (item.TrangThai == 0)
                                    {
                                       <button class="btn btn-default btn-xs">Chưa Xác Nhận</button>
                                    }
                                    else if (item.TrangThai == 1)
                                    {
                                        <button class="btn btn-default btn-xs">Đã Xác Nhận</button>
                                    }
                                    else if (item.TrangThai == 2)
                                    {
                                        <button class="btn btn-warning btn-xs">Giao Hàng</button>
                                    }
                                    else if (item.TrangThai == 3)
                                    {
                                        <button class="btn btn-success btn-xs">Đã Thanh Toán</button>
                                    }
                                    else if (item.TrangThai == 4)
                                    {
                                        <button class="btn btn-danger btn-xs">Đã hủy</button>
                                    }

                                </td>
                                <td class="center">
                                    <a href="@Url.Action("ChiTiet","DonHang",new {ID=item.ID})" class="btn btn-primary btn-xs"><i class="fa fa-eye"></i></a>
                                </td>

                            </tr>
                        }



                    </tbody>
                </table>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>

</div>

