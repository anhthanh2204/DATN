
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--start-breadcrumbs-->
<div class="breadcrumbs">
    <div class="container">
        <div class="breadcrumbs-main">
            <ol class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li class="active">Đăng ký</li>
            </ol>
        </div>
    </div>
</div>
<!--end-breadcrumbs-->
<!--register-starts-->
<div class="register">
    <div class="container">
        <div class="register-top heading">
            <h2>REGISTER</h2>
        </div>
        @using (Html.BeginForm("DangKi", "KhachHang", FormMethod.Post))
        {
            <div class="register-main">

                <div class="col-md-6 account-left">
                    <input placeholder="Nhập họ tên" type="text" tabindex="1" name="Ten" required>
                    <input placeholder="Nhập email" type="text" tabindex="3" name="Email" required>
                    <input placeholder="Nhập số điện thoại" type="text" tabindex="3" name="SDT" required>
                    <input placeholder="Nhập địa chỉ" type="text" tabindex="3" name="DiaChi" required>


                </div>
                <div class="col-md-6 account-left">
                    <input placeholder="Mật khẩu" type="password" tabindex="4" required>
                    <input placeholder="Nhập lại mật khẩu" type="password" tabindex="4" name="MatKhau" required>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="address submit">
                <input type="submit" value="Đăng ký">
            </div>
        }
       
    </div>
</div>
<!--register-end-->

