<div class="contact">
    <div class="container">
        <div class="contact-top heading">
            <h2>LIÊN HỆ</h2>
        </div>
        <div class="contact-text">
            <div class="col-md-3 contact-left">
                <div class="address">
                    <h5>Địa chỉ</h5>
                    <p>
                        Công ty cổ phần Thành An Hưng Yên
                        <span>Địa chỉ: 317 Nguyễn Văn Linh - P. An Tảo - Tp. Hưng Yên</span>

                    </p>
                </div>
                <div class="address">
                    <h5>Liên Hê</h5>
                    <p>
                        Hotline: 0931.722.929
                        <span>  Hotline dịch vụ: 0886.107.722   </span>


                        Email: info@hyundaihungyen3s.com
                    </p>
                </div>
            </div>

            <div class="col-md-9 contact-right">
                @ViewBag.ThongBao
                @using (Html.BeginForm("LienHe", "KhachHang", FormMethod.Post))
                {
                   
                    <input type="text" placeholder="Tên" name="TenKH">
                    <input type="text" placeholder="SĐT" name="SDTKH">
                    <input type="text" placeholder="Email" name="EmailKH">
                    <textarea placeholder="Mô tả" required="" name="TinNhan"></textarea>
                        <div class="submit-btn">
                            <input type="submit" value="Gửi">
                        </div>

                }
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
