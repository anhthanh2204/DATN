@model List<ShopShoe.ViewModels.CartItems>

@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var khachhang = (ShopShoe.Models.KhachHang)ViewBag.KH;
}

<div class="breadcrumbs">
    <div class="container">
        <div class="breadcrumbs-main">
            <ol class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li class="active">Thanh Toán</li>
            </ol>
        </div>
    </div>
</div>
<!--end-breadcrumbs-->
<!--contact-start-->
<div class="contact">
    <div class="container">
        <div class="contact-top heading">
            <h2>Đơn Hàng</h2>
        </div>
        <div class="contact-text">
            <div class="col-md-4 contact-left" style="width:1200px">
                <table class="table table-bordered">
                    <thead>
                        <tr class="f_size_large">
                            <td>Tên</td>
                            <td>Giá</td>
                            <td>SL</td>
                            <td>Thành tiền</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    <p class="d_inline_b color_dark" target="_blank" href="">@item.TenXe</p>
                                </td>
                                <td>@String.Format("{0:0,0 đ}", item.GiaXe)</td>

                                <td>
                                    <p class="d_inline_b color_dark" target="_blank" href="">@item.SoLuong</p>
                                </td>

                                <td>
                                    <p class="d_inline_b color_dark">@String.Format("{0:0,0 đ}", item.ThanhTien)</p>
                                </td>
                            </tr>
                        }
                        <tr>
                            <td>
                                <a href="/Cart/Cart" class="btn btn-default">Sửa đơn hàng</a>
                            </td>


                            <td colspan="3">
                                Tổng tiền : @String.Format("{0:0,0 đ}", ViewBag.TongTien)

                            </td>
                        </tr>

                    </tbody>

                </table>
            </div>
            
            <div class="col-md-8 contact-right">

                @using (Html.BeginForm("ThanhToan", "Cart", FormMethod.Post))
                {
                    <div class="form-group">

                        <input style="width:400px" type="text" placeholder="Name" name="Ten_KH" value="@khachhang.Ten"><br />
                        <input style="margin-top:20px;width:400px" type="text" placeholder="Phone" name="SDT" value="@khachhang.SDT">
                    </div>
                    <div class="form-group">
                        <input style="width:400px" type="text" placeholder="Email" name="Email" value="@khachhang.Email"><br />
                       
                        <select style="height:50px;width:400px;margin-top:20px" name="calc_shipping_provinces" required="">
                            <option  value="@khachhang.DiaChi">Tỉnh / Thành phố</option>
                        </select><br />
                        <select style="height:50px;width:400px;margin-top:20px" name="calc_shipping_district" required="">
                            <option value="@khachhang.DiaChi">Quận / Huyện</option>
                        </select>
                        <input class="billing_address_1"  name="DiaChiKH" type="hidden" value="">
                        <input class="billing_address_2"  name="DiaChiKH" type="hidden" value="">
                    </div>
                    
                    <div class="form-group">
                        <div class="submit-btn" >
                            <input style="background-color:orange" type="submit" value="Thanh Toán">
                        </div>
                    </div>


                }
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!--contact-end-->
